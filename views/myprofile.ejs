<style>
  body {
    font-family: 'PT Sans', sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
}

.profile-container {
    background-color:#fff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    text-align: center;
    width: 80%;
    transition: transform 0.3s ease-in-out;
    max-width: 600px;
    margin: auto;
}

.profile-container:hover {
    transform: scale(1.05);
}

h1 {
  font-family: 'Inter', sans-serif;
    color: #333;
    margin-bottom: 30px;
    font-size: 24px;
}

.info-section {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
}

label {
    font-weight: bold;
    margin-right: 10px;
    color: #555;
}

p {
    margin: 0;
    line-height: 1.5; /* Adjust the line height */
}

.edit-button,
.save-button {
    border: none;
    padding: 12px 25px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
}

.edit-button {
    background-color: #4CAF50;
    color: #fff;
}

.edit-button:hover {
    background-color: #45a049;
}

.profile-container table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

.profile-container td,
.profile-container th {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
    height: 50px; /* Adjust the height of the rows */
}

.profile-container tr:hover {
    background-color: #f5f5f5;
}

.profile-container .edit-button {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    font-size: 14px;
    margin-top: 10px;
}

.profile-container .save-button {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    font-size: 14px;
    margin-top: 10px;
    display: none;
}
.profile-container {
        position: relative;
    }

    .back-button {
    position: absolute;
    top: 10px;
    left: 10px;
    font-size: 20px;
    padding: 8px 12px;
    background-color: whitesmoke;
    color: black;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
}

.back-button:hover {
    background-color: rgb(237, 235, 235);
}



.profile-container .edit-mode {
    display: block;
}

</style>
</head>

<body>
  <div class="profile-container">
    <div class="button">
        <button class="back-button" onclick="goBack()">‚Üê</button>
    </div>
    <h1>My Profile</h1>
    <table>
        <tr>
            <td><label>Name:</label></td>
            <td><p id="userName"><%= user.Name %></p></td>
        </tr>
        <tr>
            <td><label>Email:</label></td>
            <td><p id="userEmail"><%= user.email %></p></td>
        </tr>
        <tr>
            <td><label>Phone No:</label></td>
            <td><p id="userPhone"><%= user.phoneno %></p></td>
        </tr>
        <tr>
            <td><label>College Id:</label></td>
            <td><p id="userCollegeId"><%= user.collegeId %></p></td>
        </tr>
        <tr>
            <td><label>User Type:</label></td>
            <td><p id="userCategory"><%= user.category %></p></td>
        </tr>
    </table>
    
</div>

